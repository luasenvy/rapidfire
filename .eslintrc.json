{
  "root": true,
  "env": { "node": true, "es2021": true },
  "parser": "@babel/eslint-parser",
  "parserOptions": { "requireConfigFile": false, "ecmaVersion": 2021 },
  "extends": ["prettier", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  // add your custom rules here
  "rules": {
    "semi": [2, "never"],
    "no-console": ["warn", { "allow": ["debug", "warn", "info", "error"] }],
    "no-unused-vars": "warn",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "semi": false,
        "singleQuote": true,
        "printWidth": 160,
        "arrowParens": "avoid"
      }
    ]
  }
}
